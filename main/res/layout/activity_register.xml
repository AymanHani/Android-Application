<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:padding="16dp"
    android:scrollbars="vertical"

    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/previous_icon"
        android:layout_width="12dp"
        android:layout_height="20.5dp"
        android:clickable="true"
        android:src="@drawable/previous_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/title_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="JaWWalk"
        android:textColor="#000"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/previous_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/registratioin_titlePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="Create your account"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_app" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="Your Full Name"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registratioin_titlePage" />

    <EditText
        android:id="@+id/name_et_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_et"
        android:fontFamily="@font/cairo"
        android:hint="Enter your full name "
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:paddingStart="20dp"
        android:textColor="@color/font_hint"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTv" />


    <TextView
        android:id="@+id/emailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="Your Email"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_et_registration" />

    <EditText
        android:id="@+id/Email_et_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_et"
        android:fontFamily="@font/cairo"
        android:hint="Mail@example.com"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:paddingStart="20dp"
        android:textColor="@color/font_hint"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTv" />

    <TextView
        android:id="@+id/passwordTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="Password"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Email_et_registration" />

    <EditText
        android:id="@+id/password_et_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_et"
        android:fontFamily="@font/cairo"
        android:hint="*****"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:paddingStart="20dp"
        android:textColor="@color/font_hint"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTv" />

    <TextView
        android:id="@+id/tv_registration_police"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your password must contain letters from a-z, special characters and numbers"
        android:textColor="#4A4A4A"
        android:textSize="14dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_et_registration"/>

    <CheckBox
        android:id="@+id/checkBox_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree to your privacy policy and terms of use."
        android:checked="true"
        android:textSize="14sp"
        android:textColor="#4A4A4A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_registration_police"/>
    <Button
        android:id="@+id/Create_btn_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#014E7B"
        android:fontFamily="@font/cairo"
        android:padding="10dp"
        android:text="Create my account"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkBox_registration" />


    <TextView
        android:id="@+id/login_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/cairo"
        android:text="Or login with"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Create_btn_registration" />

    <LinearLayout
        android:id="@+id/login_socialMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_with">

        <LinearLayout
            android:layout_width="108dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="#ECECEC"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18.11dp"
                android:layout_height="18.11dp"
                android:src="@drawable/google" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="108dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="#ECECEC"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18.11dp"
                android:layout_height="18.11dp"
                android:src="@drawable/icon_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/apple_icon_login"
            android:layout_width="108dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="#ECECEC"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18.11dp"
                android:layout_height="18.11dp"
                android:src="@drawable/icon_apple" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_socialMedia">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If youâ€™re already a member, you can log-in from here. "
            android:textColor="#4A4A4A"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/signUp_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Login"
            android:textColor="#014E7B"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>